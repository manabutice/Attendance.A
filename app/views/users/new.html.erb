<% provide(:title, 'Sign up') %>
<h1>ユーザー登録</h1>

<div class="row">
 <div class="col-md-offset-3">
  <%= form_with(model: @user,local: true) do |f| %>
    <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :department %>
      <%= f.text_field :department %>

      <%= f.label :staff_id %>
      <%= f.number_field :staff_id %>

      <%= f.label :card_id %>
      <%= f.text_field :card_id  %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :basic_work_time %>
      <%= f.time_field :basic_work_time %>

      <%= f.label :designation_work_start_time %>
      <%= f.time_field :designation_work_start_time %>

      <%= f.label :designation_work_end_time %>
      <%= f.time_field :designation_work_end_time %>

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" %>
  <% end %>
 </div>
</div>