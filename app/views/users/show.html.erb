<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
      <div class="btn-users-show">
        <%= link_to "◀︎",user_path(date: @first_day.prev_month),class: "btn btn-primary" %>
        &nbsp;&nbsp;
        【<%= l(@first_day, format: :middle) %>】
        時間管理表
        &nbsp;&nbsp;
        <%= link_to "▶︎",user_path(date: @first_day.next_month),class: "btn btn-primary" %>
      </td>
      <td>指定勤務開始時間：<%= format_basic_info(@user.designation_work_start_time) %><br>
          指定勤務終了時間：<%= format_basic_info(@user.designation_work_end_time) %></td>
      <td colspan="3">基本時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード：<%= @user.staff_id %></td>
      <td></td>
      <td>出勤日数</td>
      <td>締め<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>


<%= link_to "勤怠を編集","#",class: "btn btn-primary" %> &nbsp;<%= link_to "CSV出力","#",class: "btn btn-primary" %><br>
<%= link_to "勤怠修正ログ（承認済）","#",class: "btn btn-primary" %>
</tr>
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>残業申請</th>
        <th>日付</th>
        <th>曜日</th>
        <th>勤怠登録</th>
        <th>出勤時間</th>
        <th>退勤時間</th>
        <th>在社時間</th>
        <th>備考</th>
      </tr>
    </thead>

    <tbody tbody class="line">
    <% @attendances.each do |day| %>
          <% css_class = 
            case $days_of_the_week[day.worked_on.wday]
              when '土'
                'text-primary'
              when '日'
                'text-danger'
              end
              %>
        <tr>
          <td><%= link_to "残業申請","#", class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
